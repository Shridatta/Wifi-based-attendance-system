<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:scrollbars="vertical"
    android:background="@drawable/bgmainpage1">
     
<TextView
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="WELCOME" 
        android:id="@+id/tv_sucess"
       	android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="bold"
       />
<TextView
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLASS" 
        android:id="@+id/class_id"
        android:layout_marginTop="10dp"
        />
<TextView
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIVISION" 
        android:id="@+id/division_id"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
       
        />
<TextView
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LECTURE" 
        android:id="@+id/lecture_id"
       android:layout_marginTop="-20dp"
       android:layout_gravity="right"
        />
<Button android:layout_width="90dp"
		android:layout_height="50dp"
		android:text="@string/hello_world"
		android:id="@+id/bt_scan"
		android:layout_gravity="right"
		 android:textStyle="italic"
		 android:textSize="14sp"
    />

<TextView
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present COUNT=0" 
        android:id="@+id/pcount_id"
       	android:layout_gravity="center"
		android:textSize="20sp"
	android:textStyle="bold"
        />

<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Other Option"
    	android:id="@+id/bt_other"
 />

<Button 
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"		
	android:text="Time Table"
    android:id="@+id/bt_timetable"
 />

<ListView
      android:id="@+id/listView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/background_dark"
      android:listSelector="@android:color/darker_gray" />
<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="send data"
		android:visibility="invisible"
    />

</LinearLayout>
